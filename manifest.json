{
  "manifest_version": 3,
  "name": "Cookie Fetcher for FEM",
  "version": "1.0",
  "description": "A Chrome extension for fetching and applying cookies in FEM by Junior Developer | Muhammad Hany.",
  "author": "Junior Developer | Muhammad Hany ",
  "permissions": ["cookies", "storage", "identity"],
  "host_permissions": [
    "*://*.frontendmasters.com/",
    "*://dash.cloudflare.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_scripts/content.js"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
